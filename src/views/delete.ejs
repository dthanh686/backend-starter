<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Delete User</a>
    </div>
    <div class="form-add-new">
        <form action="/delete-user" method="POST">
            <fieldset>
                <legend>Form Delete Users</legend>
                <div class="d-none">
                    <label>Id:</label>
                    <input type="text" name="userId" value="<%= userEdit.id %>" />
                </div>
                <div class="input-group">
                    <label>Are you sure to delete User with email</label>
                    <input type="text" name="email" value="<%= userEdit.email %>" />
                </div>
                <div class="btn">
                    <button>Confirm delete</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>